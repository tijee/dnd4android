<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="wrap_content"
	android:orientation="horizontal" android:paddingRight="5dp">
	<View android:id="@+id/power_list_item_type_view"
		android:layout_width="10dp" android:layout_height="match_parent"
		android:layout_marginRight="5dp" />
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content" android:orientation="vertical">
		<com.thomasgallinari.dnd4android.view.widget.StyledTextView
			style="@style/DnDListViewItemTextView" android:id="@+id/power_list_item_name_text_view"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:textSize="18sp" />
		<com.thomasgallinari.dnd4android.view.widget.StyledTextView
			style="@style/DnDListViewItemTextView" android:id="@+id/power_list_item_description_text_view"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:singleLine="true" android:ellipsize="marquee" />
	</LinearLayout>
</LinearLayout>
